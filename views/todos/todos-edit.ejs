<% include ../partials/boilerplate %>
<header>
    <h1>Today's To-Do</h1>
    <nav>
        <ul>
            <li><a href='/'>Home</a></li>
            <li><a href='/todos'>To-Do</a></li>
            <li><a href='/todos/add'>Add</a></li>
        </ul>
    </nav>
</header>
<hr>
<h1><span>Edit To-Do</span></h1>
<div class='note'>
<form method='POST' action='/todos/<%= id %>?_method=PUT'>
  <input name='title' class='form' type='text' value='<%= todo.title %>' />
  <input name='category' class='form' type='text' value='<%= todo.category %>' />
  <textarea name='description' class='form'><%= todo.description %></textarea>
  <input type="radio" name="status" value="to do" checked> To Do<br>
  <input type="radio" name="status" value="done"> Done<br>
  <input type='submit' class='button' value='Save' />
</form>
</div>

<% include ../partials/end %>